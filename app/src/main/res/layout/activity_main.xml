<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBg"
    tools:context="com.voutsadakis.stelios.helloandroid.MainActivity">

    <TextView
        android:id="@+id/coffee_title"
        style="@style/titleView"
        android:text="@string/text_title" />

    <ImageView
        android:id="@+id/coffee_image"
        style="@style/imageView"
        android:src="@drawable/coffee" />

    <TextView
        android:id="@+id/coffee_street"
        style="@style/textView"
        android:layout_below="@id/coffee_image"
        android:drawableLeft="@drawable/crosshairsgps"
        android:text="@string/street" />

    <TextView
        android:id="@+id/coffee_area"
        style="@style/textView"
        android:layout_below="@id/coffee_street"
        android:drawableLeft="@drawable/mapmarker"
        android:text="@string/area" />

    <TextView
        android:id="@+id/coffee_phone_num"
        style="@style/textView"
        android:layout_below="@id/coffee_area"
        android:drawableLeft="@drawable/cellphoneiphone"
        android:text="@string/phone_num" />

    <TextView
        android:id="@+id/coffee_link"
        style="@style/textView"
        android:layout_below="@id/coffee_phone_num"
        android:autoLink="web"
        android:drawableLeft="@drawable/web"
        android:text="@string/my_link" />

    <TextView
        android:id="@+id/cofee_working"
        style="@style/textView"
        android:layout_below="@id/coffee_link"
        android:autoLink="web"
        android:drawableLeft="@drawable/calendar"
        android:text="@string/working" />

</RelativeLayout>
